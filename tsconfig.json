{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]

  },
  "include": [
    "src",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "swc": true
  }
}
